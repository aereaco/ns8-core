import agent
import json
import sys
import os
import secrets
import string

request = json.load(sys.stdin)
domain = request['domain'].lower()
node_id = os.environ['NODE_ID']

rdb = agent.redis_connect()

# Retrieve the node VPN IP address to bind on it
agent.set_env('IP_ADDRESS', rdb.hget(f'node/{node_id}/vpn', 'ip_address'))

# Lookup a node for the given domain
for kopenldap in rdb.scan_iter(f'module/openldap*/environment'):
    penv = rdb.hgetall(kopenldap)
    if penv.get('DOMAIN', '') == domain:
        provision_type = 'join-domain'
        break
else: # No existing LDAP server for the given domain. Create a new one
    provision_type = 'new-domain'

agent.set_env('PROVISION_TYPE', provision_type)

# Save values of optional parameters
agent.set_env('DOMAIN', domain)

# JSON Schema mandatory fields. We are sure they are present.
agent.set_env('LDAP_ADMIN_USERNAME', request['adminuser'])
agent.set_env('LDAP_ADMIN_PASSWORD', request['adminpass'])

# Generate a random password for ldapservice
alphabet = string.ascii_letters + string.digits + '+-*/.-_$%&?!^'
svcpass = ''.join([secrets.choice(alphabet) for i in range(32)])

agent.set_env('LDAP_ROOT', 'dc=' + domain.replace('.', ',dc='))
agent.set_env('LDAP_PASSWORDS', svcpass)

agent.dump_env()
