{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "provision-domain input",
    "$id": "http://schema.nethserver.org/openldap/provision-domain-input.json",
    "description": "Provision a new OpenLDAP instance",
    "examples": [
        {
            "domain": "example.com"
        }
    ],
    "type": "object",
    "required": [
        "domain"
    ],
    "properties": {
        "domain": {
            "type": "string",
            "title": "Domain name",
            "pattern": "^[a-zA-Z][-a-zA-Z0-9]{0,62}(\\.[a-zA-Z][-a-zA-Z0-9]{0,62})+$",
            "maxLength": 140,
            "minLength": 1
        }
    }
}
